@model IEnumerable<BlobUploadWebApp.Models.UserMedium>

@{
    ViewData["Title"] = "File Upload";
}

<div class="container">
    <div class="row">
        @using (Html.BeginForm("UploadMediaFile", "UserMedia", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h3 class="panel-title">Upload Your files</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <input type="file" name="file" class="upload-button" />
                        <br />
                        <input type="submit" class="btn save-button" value="Save File" />
                    </div>
                </div>
            </div>
            <div>
                <div class="file-count-display">You have @ViewBag.PhotoCount files </div>
            </div>
        </div>
        }
    </div>
    <br />
    <div class="row">
        <br />
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-xs-6 thumb image-description">
                <a class="thumbnail" href="@item.MediaUrl">
                    <img class="img-responsive" src="@item.MediaUrl" style="height: 250px;width:100%;" alt="">
                </a>
                <p>
                    File Name: @item.MediaFileName
                </p>
                <p>
                    Date-Time Uploaded: @item.DateTimeUploaded
                </p>
                <p> 
                    File Type: @item.MediaFileType
                </p>
                <a href="@Url.Action("DeleteMediaFile", "UserMedia",new { id = item.MediaId })" class="btn btn-default btn-block">
                    <Span class="delete-button" aria-hidden="true"> Delete Image</Span>
                </a>
            </div>
        }
    </div>
</div>

<style>
    .panel-title {
        color: grey;
        margin-bottom: 20px;
    }
    .upload-button{
        color: darkblue;
        border-radius: 4px;
        width: 300px;
    }
    .save-button{
        background-color: cornflowerblue;
        color: white;
        margin-top:10px;
        width: 100px;
    }
    .save-button:hover{
        column-rule-color:darkblue;
        background-color:dodgerblue;
    }
    .file-count-display {
        color: darkblue;
        margin-top: 10px;
    }
    .img-responsive{
        top:5px;
    }
    .image-description {
        background-color: aqua;
        font-size: 10pt;
        padding: -5px;
    }
    .delete-button{
        background-color:sandybrown;
        color:white;
        padding: 5px;
        border-radius: 4px;
        position: relative;
        margin-bottom: 4px;
    }
    .delete-button:hover {
        color: black;
        background-color: green;
    }
</style>